  <script>
document.addEventListener("DOMContentLoaded", () => {
  const form = document.getElementById("contactForm");
  const messageBox = document.getElementById("formMessage");

  form.addEventListener("submit", async (e) => {
    e.preventDefault();
    messageBox.textContent = "Sending message...";
    messageBox.style.color = "#555";
    messageBox.style.opacity = "1";

    try {
      // simulate sending (you can replace this with fetch() to your backend)
      await new Promise(resolve => setTimeout(resolve, 800));

      form.reset();
      messageBox.textContent = "‚úÖ Message sent! Please wait for our feedback by email.";
      messageBox.style.color = "green";

      // fade out automatically after 4 seconds
      setTimeout(() => {
        messageBox.style.transition = "opacity 1s ease";
        messageBox.style.opacity = "0";
        setTimeout(() => messageBox.textContent = "", 1000);
      }, 4000);
    } catch (err) {
      console.error(err);
      messageBox.textContent = "‚ö†Ô∏è Something went wrong. Please try again.";
      messageBox.style.color = "red";
    }
  });
});
</script>
